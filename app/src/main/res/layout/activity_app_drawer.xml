<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <!-- 🔍 Fixed Search Bar -->
    <SearchView
        android:id="@+id/search_view"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:iconifiedByDefault="false"
        android:queryHint="Search apps..."
        android:background="@drawable/bg_searchview_rounded"
        android:elevation="6dp"
        android:padding="8dp"
        android:layout_margin="8dp" />

    <!-- 📱 Scrollable Content (Recent + All Apps) -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_view"
        android:fillViewport="true"
        android:layout_marginTop="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <!-- 🕓 Recent Apps Horizontal Scroll -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp">

                <LinearLayout
                    android:id="@+id/recent_apps_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp" />
            </HorizontalScrollView>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginVertical="4dp"
                android:background="#555" />

            <!-- 🧱 All Apps Grid -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/all_apps_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:nestedScrollingEnabled="false" />

            <!-- 🔖 Shortcut Card (Dynamic Buttons) -->
            <LinearLayout
                android:id="@+id/shortcut_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone"
                android:background="#222"
                android:elevation="4dp" />

            <!-- 🔎 Search With Label -->
            <TextView
                android:id="@+id/search_with_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:textColor="#fff"
                android:textSize="14sp"
                android:text="Search with:"
                android:visibility="gone" />

            <!-- 🔗 Search With Row (Google, YouTube etc.) -->
            <LinearLayout
                android:id="@+id/search_with_row"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:gravity="start"
                android:visibility="gone" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
